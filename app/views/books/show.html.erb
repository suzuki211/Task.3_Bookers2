<div class="post-body">
  <%= attachment_image_tag @book, :image %>
  <p>title：<%= @book.title %></p>
  <p>body：<%= @book.body %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <p>投稿日時：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book.user == current_user %>
    <%= link_to "削除", book_path(@book), method: :delete %>
  <% end %>
</div>